% Common project erlang options.
{erl_opts, [

    % mandatory
    debug_info,
    warnings_as_errors,
    warn_export_all,
    warn_missing_spec,
    warn_untyped_record,
    warn_export_vars,

    % by default
    warn_unused_record,
    warn_bif_clash,
    warn_obsolete_guard,
    warn_unused_vars,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_deprecated_function

    % at will
    % bin_opt_info
    % no_auto_import
    % warn_missing_spec_all

]}.

% Common project dependencies.
{deps, [
    {folsom        , {git, "https://github.com/folsom-project/folsom.git"         , {branch, "master"}}},
    {cg_mon        , {git, "https://github.com/rbkmoney/cg_mon.git"               , {branch, "master"}}},
    {prometheus, "4.6.0"},
    {prometheus_cowboy, "0.1.8"}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    deprecated_functions_calls,
    deprecated_functions
]}.

{dialyzer, [
    {warnings, [
        % mandatory
        unmatched_returns,
        error_handling,
        race_conditions,
        unknown
    ]},
    {plt_apps, all_deps},
    {plt_extra_apps, [
        woody
    ]}
]}.

{shell, [{apps,[how_are_you]}]}.

{profiles, [
    {test, [
        {deps, [
            {woody, {git, "git@github.com:rbkmoney/woody_erlang.git", {branch, "master"}}}
        ]}
    ]}
]}.
